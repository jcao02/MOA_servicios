<div id="body-login">
<div class="span1"></div>
<div class="span4">
  <%= image_tag 'logo_Moa.png'%>
  <br>
  <a href="#" class="saber">¿Quieres saber más?</a>
  <br><br>
  <%= link_to 'Contáctanos', "mailto:marthaovalles@gmail.com",
    :title => "Envia un e-mail para comunicarte con nosotros.", :target => "_blank",
    :class => "saber" %>
</div>
<div class="span2"></div>
<div class="span4">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { id: "form-inicio"}) do |f| %>
    <fieldset>
      <legend>Iniciar Sesión</legend>
      <span style="color:red;"><%= flash[:alert] %></span>
      <div class="form-group">
        <%= f.label :Usuario %>
        <%= f.text_field :login, :autofocus => true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Contraseña %>
        <%= f.password_field :password %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :recordarme %>
        </div>
      <% end -%>
      <%= f.submit "Iniciar Sesión", :class => "btn btn-defaulbtn btn-defaultt", :disable_with => "Conectando..." %>
      <div><%= link_to '¿Olvidaste tu contraseña?', ask_password_usuarios_path, :remote => true, :id => 'ask_password'%></div>
      <div id="dialog_recover" style="display:none;"></div>
    </fieldset>
  <% end %>
</div>
</div>
