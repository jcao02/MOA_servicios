<% if usuario_signed_in? %>
  <ul id="headDown">
    <%= link_to content_tag(:li, 'Inicio', :class => "nav"), home_path %>
    <% case current_usuario.admin
      when 0 %>
      <%= link_to content_tag(:li, 'Productos', :class => "nav"), productos_path %>
      <%= link_to content_tag(:li, 'Solicitudes', :class => "nav"), tramites_path %>
      <%= link_to content_tag(:li, 'Alertas', :class => "nav"), vencido_index_path %>
    <% when 1..2%>
      <%= link_to content_tag(:li, 'Usuarios', :class => "nav"), usuarios_path %>
      <%= link_to content_tag(:li, 'Productos', :class => "nav"), productos_path %>
      <%= link_to content_tag(:li, 'Solicitudes', :class => "nav"), tramites_path %>
      <%= link_to content_tag(:li, 'Registros', :class => "nav"), logproductos_index_path %>
      <%= link_to content_tag(:li, 'Documentos', :class => "nav"), documentos_path%>
    <% end %>
  </ul>
<% end %>
