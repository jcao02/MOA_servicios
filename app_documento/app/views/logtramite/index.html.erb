<h1 style="margin-left: 20px;">Log Solicitudes</h1>
<div style="margin-left: 40px;margin-bottom: 20px;">
  <button style= Padding:10px>
    <%= link_to 'Log Productos', logproductos_path %>
  </button>
  <button style= Padding:10px>
    <%= link_to 'Log Documentos', logdocumento_index_path %>
  </button>
</div>
<table class="log_data_table" id="tabla_show_log_tram">
  <thead>
    <th>Usuario</th>
    <th>Producto</th>
    <th>Documento</th>
    <th>Acci√≥n</th>
    <th>Fecha</th>
  </thead>

  <tbody>
    <% @logtramites.each do |logtramite| %>
    <tr>
      <td style="width:150px;">
        <% if logtramite.usuario.nil? %>
        <%= logtramite.nusuario %>
        <% else %>
        <%= link_to (logtramite.usuario) do %>
        <%= logtramite.nusuario %>
        <% end %>
        <% end %>
      </td>
      <td style="width:400px">
        <% if logtramite.producto.nil? %>
        <%= logtramite.nproducto %>
        <% else %>
        <%= link_to (logtramite.producto) do %>
        <%= logtramite.nproducto %>
        <% end %>
        <% end %>
      </td>
      <td style="width:400px">
        <% if logtramite.tramite.nil? %>
        <%= logtramite.ntipodocumento %>
        <% else %>
        <%= link_to (logtramite.tramite) do %>
        <%= logtramite.ntipodocumento %>
        <% end %>
        <% end %>
      </td>
      <td style="width:80px">
        <%= logtramite.tipo %>
      </td>
      <td>
        <%= logtramite.created_at.strftime("%I:%M%p")%>
        <%= logtramite.created_at.day%>/<%= logtramite.created_at.month%>/<%= logtramite.created_at.year%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
