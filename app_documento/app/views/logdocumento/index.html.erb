<div class="span1"></div>
<div class="span10">
<h3>Registro Documentos</h3>
<div>
  <table class="table table-striped" id="tabla_show_log_doc">
    <thead>
      <th>Usuario</th>
      <th>Producto</th>
      <th>Documento</th>
      <th style="text-align: center;">Acci√≥n</th>
      <th style="text-align: center;">Fecha</th>
    </thead>
    <tbody>
      <% @logdocumentos.each do |logdocumento| %>
      <tr>
        <td style="width:150px;">
          <% if logdocumento.usuario.nil? %>
          <%= logdocumento.nusuario %>
          <% else %>
          <%= link_to (logdocumento.usuario) do %>
          <%= logdocumento.nusuario %>
          <% end %>
          <% end %>
        </td>
        <td style="width:250px">
          <% if logdocumento.producto.nil? %>
          <%= logdocumento.nproducto %>
          <% else %>
          <%= link_to (logdocumento.producto) do %>
          <%= logdocumento.nproducto %>
          <% end %>
          <% end %>
        </td>
        <td style="width:250px">
          <% if logdocumento.documento.nil? %>
          <%= logdocumento.ndocumento %>
          <% else %>
          <%= link_to (logdocumento.documento.pdf.url) do %>
          <%= logdocumento.ndocumento %>
          <% end %>
          <% end %>
        </td>
        <td style="width:80px;text-align: center;">
          <%= logdocumento.tipo %>
        </td>
        <td style="text-align: center;">
          <%= logdocumento.created_at.strftime("%I:%M%p")%>
          <%= logdocumento.created_at.day%>/<%= logdocumento.created_at.month%>/<%= logdocumento.created_at.year%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="span1"></div>
