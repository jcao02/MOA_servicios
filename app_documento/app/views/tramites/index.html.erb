<h1><%= flash[:title] %></h1>

<% if current_usuario.admin == 0 %>
  <%= button_to 'Nueva solicitud', new_tramite_path, :method => :get %>
<% end %>
<div class="area_filtro">
  <div class="filtro_wrapper">
    <table id="tipo_tramite_filtro">
      <thead>
        <th>Tipo</th>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  <div class="filtro_wrapper" id="solicitud_tramite_wrapper">
    <table id="solicitud_tramite_filtro">
      <thead>
        <th>Solicitud</th>
      </thead>
      <tbody>
        <% @tramites.each do |t| %>
          <tr>
            <td>
              <% if t.recibido or current_usuario.admin > 0 %>
                <%= link_to t.TipoDocumento.descripcion, t %>
              <% else %>
                <%= t.TipoDocumento.descripcion %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
