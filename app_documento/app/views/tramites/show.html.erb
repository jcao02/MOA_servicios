<table id="area_tramite">
  <tr>
    <td>
      <div class="title_show">
        <h2><%= @tramite.TipoDocumento.descripcion %></h2>
      </div>
    </td>
    <td rowspan="2">
     <table id="requisitos_show" style="height:350px;border-bottom:1px solid black">
       <thead>
         <th>
           <h2>Requisitos</h2>
         </th>
       </thead>
       
       <tbody>
        
         <% @tramite.requisitos.each_with_index do |r, index| %>
           <tr>
             <td>
               <%= content_tag "span", class: "content-estado", id:"estado"+index.to_s, data: { requisito: r } do %>
               <%= link_to r.TipoRequisito.name, r %>
             <% end %>
             </td>
           </tr>
         <% end %>
       </tbody>
     </table>
     <table style="min-width:350px;margin-left:25px">
      <tr>
        <td><div class="alerta" style="background: white;float:left"></div><div style="font-size:x-small">Stand-by</div></td>
        <td><div class="alerta" style="background: green;float:left"></div><div style="font-size:x-small">Aceptado</div></td>
        <td><div class="alerta" style="background: red;float:left">  </div><div style="font-size:x-small">Rechazado</div></td>  
      </tr>
     </table>
    </td>
  </tr>
  <tr>
    <td valign="top">
      <table class="tabla_show">
        <% if not @tramite.producto.nil? %>
          <tr>
            <td>
              <b>Producto:</b>
            </td>
            <td>
              <%= @tramite.producto.nombre %>
            </td>
          </tr>
        <% end %>
        <% if current_usuario.admin > 0 %>
          <tr>
            <td> <b>Cliente:</b></td>
            <%  %>
            <td> <%= @tramite.usuario.compania%></td>
          </tr>
        <% end %>
        <% if @tramite.recibido %>
        <tr>
          <td>
            <b>Fecha Solicitud:</b>
          </td>
          <td>
            <%= @tramite.fecha_recepcion %>
          </td>
        </tr>
        <tr>
          <td>
            <b>#Requisitos faltantes:</b>
          </td>
          <td>
            <%= @req_faltantes %>
          </td>
        </tr>
      <% end %>
      </table>
    </td>
  <tr>
    <td>
      <div style="margin-left:30px">
        <% if current_usuario.admin > 0  and @tramite.recibido %>
          <button style="padding:10px">
            <%= link_to 'Editar', edit_tramite_path(@tramite) %>
          </button>
          <button style="padding:10px">
            <%= link_to 'Volver', tramites_path %>
          </button>
        <% end %>
        
        <% if current_usuario.admin > 0 and  not @tramite.recibido %>        
          <%= semantic_form_for @tramite, :url => check_tramites_path(:id => @tramite.id) do |f| %>
            <%= f.input :recibido, :as => :hidden, :value => true %>
            <%= f.input :fecha_recepcion , :as => :hidden, :value => Date.today %>
            <%= f.input :estado, :as => :hidden, :value => 1 %>
            <%= f.action :submit, :label => "Aceptar", :class => 'area_tramite' %>
          <% end %>
          <%= semantic_form_for @tramite, :url => check_tramites_path(:id => @tramite.id) do |f| %>
            <%= f.input :recibido, :as => :hidden, :value => false%>
            <%= f.action :submit,  :label => "Rechazar" %>
          <% end %>
          <button style="padding:10px;">
            <%= link_to 'Volver', tramites_path %>
          </button>
        <% end %>
        <%if current_usuario.admin == 0 %>
          <button style="padding:10px;margin-left:30px;">
            <%= link_to 'Volver', tramites_path %>
          </button>
        <% end %> 
      </div>
    </td>
  </tr>
</table>
