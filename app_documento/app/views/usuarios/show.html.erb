
<table class="area_show">
  <tr>
    <td>
      <div class="title_show">
        <h2>Información de usuario</h2>
      </div>
    </td>
    <td>
      <div class="title_show">
        <h2>Configuración</h2>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <table class="tabla_show">
        <tr>
          <td>
            <b>Usuario:</b>
          </td>
          <td>
            <%= @usuario.login %>
          </td>
        </tr>
      <tr>
        <td>
          <b>Nombre:</b>
        </td>
        <td>
          <%= @usuario.nombre %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Apellido:</b>
        </td>
        <td>
          <%= @usuario.apellido %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Mail:</b>
        </td>
        <td>
          <%= @usuario.email %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Telefono:</b>
        </td>
        <td>
          <%= @usuario.telefono %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Compania:</b>
        </td>
        <td>
          <%= @usuario.compania %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Rif:</b>
        </td>
        <td>
          <%= @usuario.rif %>
        </td>
      </tr>
      <tr>
        <td>
          <b>Tipo de usuario </b>
        </td>
        <td>
          <% case @usuario.admin
           when 0 %>
           Cliente
         <%   when 1 %>
           Admin
         <%   when 2 %>
           Super-Admin
         <%   else   %>
           Contactar servicio
         <% end %>
       </td>
     </table>
   </td>
   <td class="conf_list" valign="top">
     <ul>
       <% if current_usuario.admin == 2  or  current_usuario.login == @usuario.login %>
         <li>
         <%= link_to 'Editar Perfil', edit_usuario_path(@usuario)%>
         <%=link_to image_tag("/assets/edit.jpg", :class => "cos_icon"), edit_usuario_path(@usuario) %>
         </li>
       <% end %>
       <% if current_usuario.login == @usuario.login%>
         <li>
         <%=link_to 'Cambiar Contraseña', edit_password_usuarios_path, :remote => true, :id => "cambiar_contr"  %> <%= image_tag("/assets/password.png", :class => "cos_icon")%>
         </li>
       <%end%>
       <% if current_usuario.admin == 2 and current_usuario.login != @usuario.login %>
         <li>
         <%= link_to 'Eliminar Usuario', @usuario, method: :delete, data: { confirm: '¿Estas seguro que deseas eliminar este usuario?' } %>
         <%= image_tag("/assets/delete.png", :class => "cos_icon")%>
         </li>
       <% end %>
     </ul>
   </td>
 </tr>
 </table>
 <div id="dialog_contr" style="display:none;" style="margin:0; padding:0; height: 300px;"></div>
