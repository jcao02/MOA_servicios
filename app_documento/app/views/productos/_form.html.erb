<%= semantic_form_for @producto do |f| %>
  <ul>
    <table class="table_forms">
      <thead>
        <tr>
          <td colspan="2">
            <h1>
              <%=flash[:accion]%>
            </h1>
          </td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= f.input :registro_sanitario, :label => "Registro Sanitario" %>
          </td>
          <td>
            <%= f.input :alimento, :as => :radio, :collection => [["Alimento", true], ["Licor", false]], :label => "Tipo"%>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.input :nombre, :label => "Nombre"%>
          </td>
          <td>
            <%= f.input :marca, :label => "Marca"%>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.input :pais_elaboracion, :as => :country, :label => "Procedencia"%>
          </td>
          <td>
            <%= f.input :fabricante, :label => "Fabricante"%>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.input :codigo_arancelario, :label => "Código Arancelario"%>
          </td>
          <% if flash[:accion] == "Crear Producto"%>
          <td>
            <%= f.input :usuario_id, :as => :select, :collection => @companias, :selected => @companias[0], :label => "Cliente", :id => "select_cliente"%>
          </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
      <tr>
        <td>
          <%= f.input :zona_venta, :as => :select, :collection => [["Tierra firme"], ["Puerto libre Isla de Margarita"], ["Puerto libre Santa Helena de Uairen"], ["Duty free"]], 
            :selected => "Tierra firme", :label => "Zona de régimen aduanero"%>
        </td>
        <td>
          <%= f.input :on, :label => "Habilitar", :as => :radio, :collection => [["Sí", 1], ["No", 0]]%>
        </td>
      </tr>
      <tr>
        <td>
          <div style="margin-left:0px;margin-top:9px">
            <%= f.action :submit, :label => flash[:accion] %>
            <button>
              <%= link_to 'Volver', :back %>
            </button>
          </div>
        </td>
        <td>
          <%= f.input :grado_alcoholico, :as => :select, :collection => 1..50, :label => "Grado Alcohólico"%>
        </td> 
      </tr>
      </tbody>
    </table>
  </ul>
<% end %>
<%= content_tag :div, :id => "autocomplete", :data => {:marcasDisponibles => @marcas, :fabricantesDisponibles => @fabricantes } do %>
<% end %>
